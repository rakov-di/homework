.backdrop
  position: fixed
  width: 100%
  height: 100%
  left: 0
  top: 0
  z-index: 235
  animation: 0.3s ease-out 0s 1 normal none running backdropAnimation
  background-color: rgba(0, 0, 0, 0.6)
  // backdrop-filter: blur(3px)

@keyframes backdropAnimation
  0%
    opacity: 0
  100%
    opacity: 1
