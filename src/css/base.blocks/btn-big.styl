.btn-big
  flex-shrink: 0
  height: 36px
  padding: 0 var(--p-xxxl)
  border-radius: var(--br-s)
  border: none
  outline: none
  cursor: pointer
  $text_btn-big()

  &:disabled
    background-color: var(--bgBtnBifDisabled)
    color: var(--cBtnBigDisabled)

  &_type_primary
    background-color: var(--bgBtnPrimary)

    &:hover
      background-color: var(--bgBtnPrimaryHovered)

    &:focus
      box-shadow: inset 0 0 0 2px var(--cBorderBtnPrimaryFocused) // это border

  &_type_secondary
    background-color: var(--bgBtnSecondary)

    &:hover
      background-color: var(--bgBtnSecondaryHovered)

    &:focus
      box-shadow: inset 0 0 0 2px var(--cBorderBtnSecondaryFocused) // это border
