.card
  display: flex
  width: 100%
  margin-bottom: var(--p-xxs)
  padding: var(--p-m) var(--p-xxxxl)
  box-shadow: var(--bs-50)
  border-radius: var(--br-m)
  cursor: pointer

  &:hover
    box-shadow: var(--bs-100)

  &_status_done

    & ^[0]__task-num
      color: var(--cTaskDone)

    & ^[0]__icon
      @extend $icon_done-24

      @media only screen and (max-width: $bpMobilePageBuild)
        @extend $icon_done-16


  &_status_wait

    & ^[0]__task-num
      color: var(--cTaskWait)

    & ^[0]__icon
      @extend $icon_wait-24

      @media only screen and (max-width: $bpMobilePageBuild)
        @extend $icon_wait-16

  &_status_fail

    & ^[0]__task-num
      color: var(--cTaskFail)

    & ^[0]__icon
      @extend $icon_fail-24

      @media only screen and (max-width: $bpMobilePageBuild)
        @extend $icon_fail-16

  &__content
    display: flex

  &__icon
    flex-shrink: 0
    margin-right: var(--p-xxs)

  &__info
    flex-grow: 1
    display: flex
    justify-content: space-between

    &_direction_row
      flex-direction: row

      @media only screen and (max-width: $bpMobilePageBuild)
        flex-direction: column

    &_direction_column
      flex-direction: column

  &__task
    display: flex
    flex-direction: row
    align-items: center
    margin-bottom: var(--p-xxs)

    @media only screen and (max-width: $bpMobilePageBuild)
      flex-direction: column
      align-items: flex-start
      margin-bottom: 0

  &__task-num
    display: inline-block
    margin-right: 4px
    $text_task-num-desktop()

    @media only screen and (max-width: $bpMobilePageBuild)
      $text_task-num-mobile()
      margin-bottom: var(--p-xxs)

  &__title
    display: inline-block
    $text_task-title()

    @media only screen and (max-width: $bpMobilePageBuild)
      margin-bottom: var(--p-xxs)

  &__meta
    flex-shrink: 0
    display: flex

    //@media only screen and (max-width: $bpMobilePageBuild)
    //  padding: var(--p-xxs) 0

    //&_vertical
    //  flex-direction: column
    //
    //  @media only screen and (max-width: $bpMobilePageBuild)
    //    flex-direction: row
    //    border-top: 1px solid var(--cBorderCardMeta)
    //
    //  & ^[0]__icon-text:not(:first-child)
    //    margin-top: var(--p-m)
    //
    //    @media only screen and (max-width: $bpMobilePageBuild)
    //      margin-top: 0
    //      margin-left: var(--p-xs)

    &_horizontal
      flex-direction: row
      margin-bottom: var(--p-xxs)

      @media only screen and (max-width: $bpMobilePageBuild)
        flex-direction: column

      & ^[0]__icon-text:not(:first-child)
        margin-left: var(--p-xxs)

        @media only screen and (max-width: $bpMobilePageBuild)
          margin-left: 0
          margin-top: var(--p-xxs)

  &__time
    flex-shrink: 0
    display: flex

    &_vertical
      flex-direction: column

      @media only screen and (max-width: $bpMobilePageBuild)
        flex-direction: row
        padding-top: var(--p-xxs)
        border-top: 1px solid var(--cBorderCardMeta)

      & ^[0]__icon-text:not(:first-child)
        margin-top: var(--p-m)

        @media only screen and (max-width: $bpMobilePageBuild)
          margin-left: var(--p-xxs)
          margin-top: 0

    &_horizontal
      flex-direction: row
      padding-top: var(--p-xxs)
      border-top: 1px solid var(--cBorderCardMeta)

      & ^[0]__icon-text:not(:first-child)
        margin-left: var(--p-xxs)

