// Условные обозначения
// c - color
// bg - background
// btn - button
// plh - placeholder
// num - number
// w - width
// h - height

// ПСД - повод спросить дизайнера

*
  box-sizing: border-box

:root
  // Цвета текстов
  --cTextPrimary: #000000
  --cTextSecondary: rgba(0, 0, 0, 0.65)
  --cTextSecondary: rgba(0, 0, 0, 0.3) // ПСД. Цвет встречается в описании компонентов, но отсутсвует на макетах страниц
  --cTextTitle: #7F8285
  --cTextValue: #434445
  --cInputPlh: rgba(0, 0, 0, 0.2)

  // Доп. цвета текстов для Задач
  --cTaskWait: #FF9A00
  --cTaskFail: #FF3333
  --cTaskDone: #00B341
  --cTaskDescription: #44444
  --cLinkHovered: #E00000

  // Рамки
  --cBorder: #D9D9D9
  --cBorderFocused: #B3B3B3

  // Фоны
  --bgMain: #E5E5E5
  --bgBtnPrimary: #FFCC00
  --bgBtnSecondary: #E6E6E6
  --bgContainerDesktop: #F0F2F3
  --bgContainerMobile: #F2F2F2
  // ПСД. 2 последних цвета применяются к одному блоку. Кажется, что разницы нет.
  // Возможно, выделено в разные цвета из-за разной цветопередачи на среднем мобильники и десктопе

  // Доп. цвета иконок
  --cIconPlay: #111111 // ПСД. Все иконки, кроме этой - #000. Кажется, что разница нет.
  --cIconLogo: rgba(0, 0, 0, 0.1)

  --wMaxContent: 800px
  --hHeader: 48px
  --hFooter: 32px
