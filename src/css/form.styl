.form
  margin-top: 8px

  &__title
    $form-title()

  &__subtitle
    margin-top: 8px
    $form-subtitle()

  &__field
    padding: 8px 0

  &__btn-group

    @media only screen and (max-width: $bpMobileDefault)
      padding: 8px 0

  &__btn

    @media only screen and (max-width: $bpMobileDefault)
      display: block
      width: 100%

  &__btn:not(:first-child)
    margin-left: 8px

    @media only screen and (max-width: $bpMobileDefault)
      margin-left: 0
      margin-top: 12px
