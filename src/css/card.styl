.card
  width: 100%
  margin-bottom: 8px;
  padding: 12px 24px
  box-shadow: 0 1px 1px rgba(67, 68, 69, 0.3), 0 0 1px rgba(67, 68, 69, 0.3);
  border-radius: 6px;

  &_status_done

    & ^[0]__task-num
      color: var(--cTaskDone)

  &_status_wait

    & ^[0]__task-num
      color: var(--cTaskWait)

  &_status_fail

    & ^[0]__task-num
      color: var(--cTaskFail)

  &__content
    display: flex

  &__icon
    flex-shrink: 0

  &__info
    flex-grow: 1
    display: flex
    justify-content: space-between

  &__task
    margin-bottom: 8px

  &__meta
    display: flex

    &_vertical
      flex-direction: column

      & ^[0]__icon-text:not(:first-child)
        margin-top: 12px

    &_horizontal
      flex-direction: row

      & ^[0]__icon-text:not(:first-child)
        margin-left: 10px


