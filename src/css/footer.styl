.footer
  flex-shrink: 0
  width: 100%
  background-color: var(--bgContainerDesktop)
  padding: 0 var(--p-xl)

  &__container
    display: flex
    justify-content: space-between
    align-items: center
    max-width: var(--wMaxContent)
    min-width: var(--wMinContent)
    margin: auto

  &__menu
    padding: var(--p-xxs) 0


  &__copyright
    padding: var(--p-xxxs) 0
    $text_copyright()


@media only screen and (max-width: $bpMobileDefault)
  .footer
    &__container
      flex-direction: column
      justify-content: flex-start
      align-items: flex-start
      padding: var(--p-m) 0

    &__menu
      padding: 0

    &__copyright
      margin-top: var(--p-xxs)
      padding: 0

