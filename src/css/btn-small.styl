.btn-small
  flex-shrink: 0
  display: flex
  justify-content: center
  align-items: center
  height: 28px
  min-width: 28px
  border-radius: var(--br-s)
  border: none
  cursor: pointer
  outline: none
  $text_btn-small()
  background-color: var(--bgBtnSecondary)

  // 2 следующих стиля отсутсвуют на макете
  // добавил для улучшения user experience и accessibility
  // ПСД
  &:hover
    background-color: var(--bgBtnSecondaryHovered)

  &:focus
    box-shadow: inset 0 0 0 2px var(--cBorderBtnSecondaryFocused)

  &_type_only-icon
    padding: 0 8px

  &_type_only-text
    padding: 0 13px

  &_type_icon-text
    padding: 0 13px 0 8px

    @media only screen and (max-width: $bpMobileDefault)
      padding: 0 8px
      font-size: 0

    &::before
      content: ''
      display: block
      margin-right: 8px

      @media only screen and (max-width: $bpMobileDefault)
        margin: auto
