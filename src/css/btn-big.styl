.btn-big
  flex-shrink: 0
  height: 36px
  padding: 0 20px
  border-radius: 4px
  border: none
  @extend .text_btn-big
  cursor: pointer
  outline: none

  &:disabled
    background-color: var(--bgBtnDisabled)
    color: var(--cBtnDisabled)

  &_type_primary
    background-color: var(--bgBtnPrimary)

    &:hover
      background-color: var(--bgBtnPrimaryHovered)

    &:focus
      box-shadow: inset 0 0 0 2px var(--cBorderBtnPrimaryFocused)

  &_type_secondary
    background-color: var(--bgBtnSecondary)

    &:hover
      background-color: var(--bgBtnSecondaryHovered)

    &:focus
      box-shadow: inset 0 0 0 2px var(--cBorderFocused)
